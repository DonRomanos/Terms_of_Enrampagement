{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "conan build",
            "type": "shell",
            "command": "conan build .. -p ${input:conan-profile}",
            "options": {
                "cwd": "${workspaceFolder}/build_${input:conan-profile}"
            },
            "group": {
                "isDefault": true,
                "kind": "build"
            }
        },
        {
            "label": "conan install",
            "type": "shell",
            "command": "mkdir -p build_${input:conan-profile} && cd build_${input:conan-profile} && conan install .. -p ${input:conan-profile}",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "conan-profile",
            "description": "Which conan profile you want to use... make sure it exists!",
            "options": [
              "gcc-9",
              "gcc-9_debug"
            ],
            "default": "gcc-9"
          },
    ]
}